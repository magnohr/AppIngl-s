<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdf3e5"
    android:orientation="vertical"
    tools:context=".ui.Dias_da_semana.Dias_da_semana1Fragment">

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:background="#fdf3e5"
        android:src="@drawable/dias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/domingo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="91dp"
        android:text=" Sound"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sabado" />

    <Button
        android:id="@+id/segunda"
        android:layout_width="93dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="61dp"
        android:text=" Sound"
        app:layout_constraintBottom_toTopOf="@+id/terca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sabado"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:text=" Sound"
        app:layout_constraintBottom_toTopOf="@+id/domingo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexta" />

    <Button
        android:id="@+id/sexta"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="57dp"
        android:text=" Sound"
        app:layout_constraintBottom_toTopOf="@+id/sabado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quinta" />

    <Button
        android:id="@+id/quinta"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="55dp"
        android:text=" Sound"
        app:layout_constraintBottom_toTopOf="@+id/sexta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quarta" />

    <Button
        android:id="@+id/quarta"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="54dp"
        android:text=" Sound"
        app:layout_constraintBottom_toTopOf="@+id/quinta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terca" />

    <Button
        android:id="@+id/terca"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:text=" Sound"
        app:layout_constraintBottom_toTopOf="@+id/quarta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segunda" />

</androidx.constraintlayout.widget.ConstraintLayout>